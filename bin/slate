#!/usr/bin/env ruby

require 'kramdown'

args = ARGV[0]

# Ruby uses begin-rescue keywords instead of try-catch LMAO.... WHYYY
begin
  content = File.read(args)
  #Kramdown is cool. 
  puts Kramdown::Document.new(content).to_html
rescue Errno::ENOENT
    puts "No such file: #{args}"
rescue => e
    puts "Unexpected error occured: #{e.message}"
end
